<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_200sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp"
    android:padding="@dimen/_20sdp"
    android:background="@drawable/svg_quiz_box">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/songTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/standard"
        android:layout_marginLeft="@dimen/_5sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"
        app:fontFamily="@font/kavoon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/totalCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:layout_marginLeft="@dimen/_5sdp"
        android:textColor="@color/yellow_bg"
        android:textSize="@dimen/_28ssp"
        app:fontFamily="@font/kavoon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/songTitle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/totalSongText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Songs"
        android:layout_marginLeft="@dimen/_5sdp"
        android:textColor="@color/yellow_bg"
        android:textSize="@dimen/_15ssp"
        app:fontFamily="@font/kavoon"
        app:layout_constraintLeft_toRightOf="@+id/totalCount"
        app:layout_constraintTop_toBottomOf="@+id/songTitle" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/coinImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/png_coin"
        android:layout_marginTop="@dimen/_40sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/totalSongText" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/totalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_marginTop="@dimen/_34sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_24ssp"
        app:fontFamily="@font/kavoon"
        app:layout_constraintLeft_toRightOf="@+id/coinImage"
        app:layout_constraintTop_toBottomOf="@+id/totalSongText" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/totalAmountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_45sdp"
        android:text="USD"
        android:layout_marginLeft="@dimen/_5sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"
        app:fontFamily="@font/kavoon"
        app:layout_constraintLeft_toRightOf="@+id/totalAmount"
        app:layout_constraintTop_toBottomOf="@+id/totalSongText" />

</androidx.constraintlayout.widget.ConstraintLayout>