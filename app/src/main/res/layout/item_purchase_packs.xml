<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp"
    android:padding="@dimen/_10sdp"
    android:background="@drawable/svg_quiz_box">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/songTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="@string/standard"
        android:layout_marginLeft="@dimen/_5sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        app:fontFamily="@font/kavoon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/totalCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:layout_marginLeft="@dimen/_5sdp"
        android:textColor="@color/yellow_bg"
        android:textSize="@dimen/_24ssp"
        app:fontFamily="@font/kavoon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/songTitle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/totalSongText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:text="Songs"
        android:layout_marginLeft="@dimen/_5sdp"
        android:textColor="@color/yellow_bg"
        android:textSize="@dimen/_15ssp"
        app:fontFamily="@font/kavoon"
        app:layout_constraintLeft_toRightOf="@+id/totalCount"
        app:layout_constraintTop_toBottomOf="@+id/songTitle" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/coinImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/png_coin"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/totalSongText" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/totalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_20ssp"
        app:fontFamily="@font/kavoon"
        app:layout_constraintLeft_toRightOf="@+id/coinImage"
        app:layout_constraintTop_toBottomOf="@+id/totalSongText" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/totalAmountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="USD"
        android:layout_marginLeft="@dimen/_5sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"
        app:fontFamily="@font/kavoon"
        app:layout_constraintLeft_toRightOf="@+id/totalAmount"
        app:layout_constraintTop_toBottomOf="@+id/totalSongText" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/continueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30ssp"
        android:background="@drawable/rounded_button_yellow"
        android:gravity="center"
        android:paddingStart="@dimen/_18sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingEnd="@dimen/_18sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:text="@string/buyNow"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/button_bg"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/totalSongText"/>

</androidx.constraintlayout.widget.ConstraintLayout>