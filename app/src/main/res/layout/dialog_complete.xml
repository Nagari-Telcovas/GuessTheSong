<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/bg_dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialogConfirmText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/img_ongratulations"
            android:textSize="@dimen/_15ssp"
            android:padding="@dimen/_10sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="@color/yellow_bg"/>

        <TextView
            android:id="@+id/messageSelectedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You crossed your time limits"
            android:gravity="center"
            android:visibility="gone"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_15ssp"
            android:fontFamily="@font/kavoon"
            android:textColor="@color/button_bg"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:id="@+id/text_msg"
            android:text="You have given wrong answer but"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="@dimen/_20ssp"
            android:textColor="@color/body_bg"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:id="@+id/text_points"
            android:fontFamily="@font/kavoon"
            android:text=""
            android:gravity="center"
            android:textSize="@dimen/_20ssp"
            android:textColor="@color/brownColor"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/submittv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_gravity="center"
            android:background="@color/purple_500"
            android:layout_marginRight="@dimen/_5sdp"

            android:textSize="@dimen/_15ssp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/exittv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_gravity="center"
            android:background="@color/button_bg"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/white"/>
    </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>